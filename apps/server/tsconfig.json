{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./",
        "outDir": ".build",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "jsx": "react"
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "./tests/**"]
}
